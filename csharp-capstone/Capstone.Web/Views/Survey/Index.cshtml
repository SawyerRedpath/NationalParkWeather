@model Survey
@{
    ViewData["Title"] = "Index";
}

<h2 class="heading">The Official National Park Survey </h2>


<form asp-controller="survey" asp-action="addsurvey" method="post">
    <div class="form-style-5">

        <fieldset>
            <legend><span class="number"></span> Survey </legend>
            <label asp-for="ParkCode">What is your Favorite National Park?</label>
            <select asp-for="ParkCode" name="field4">
                <option value="GNP">Glacier</option>
                <option value="GCNP">Grand Canyon</option>
                <option value="GTNP">Grand Teton</option>
                <option value="MRNP">Mount Ranier</option>
                <option value="GSMNP">Great Smokey Mountain</option>
                <option value="ENP">Everglades</option>
                <option value="YNP">Yellowstone</option>
                <option value="YNP2">Yosemite</option>
                <option value="CVNP">Cuyahoga Valley</option>
                <option value="RMNP">Rocky Mountain</option>
            </select>

        <label asp-for="EmailAddress">What's your email address?</label>
        <input asp-for="EmailAddress" type="email" name="field2" placeholder="Your Email ">
       
            <label asp-for="State">Your State of Residence</label>
            <select asp-for="State" asp-items="@Survey.States"></select>
            <label asp-for="ActivityLevel">What's your level of activity?</label>
            <select asp-for="ActivityLevel">
                <option value="Inactive">Inactive</option>
                <option value="Sedentary">Sedentary</option>
                <option value="Active">Active</option>
                <option value="Extremely Active">Extremely Active</option>
            </select>
            <input type="submit" value="SUBMIT" />
        </fieldset>
       

    </div>
    </form>




