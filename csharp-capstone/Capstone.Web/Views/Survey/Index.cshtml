@model Survey
@{
    ViewData["Title"] = "Index";
}

<h2 class="heading">The Official National Park Survey </h2>

<form asp-controller="survey" asp-action="addsurvey" method="post">
    <div class="form-style-5">
        <fieldset>
            <label class="text-content" asp-for="ParkCode">What is your Favorite National Park?</label>
            <select asp-for="ParkCode" asp-items="@Survey.Parks"></select>
            <label class="text-content" asp-for="EmailAddress">What's your email address?</label>
            <input asp-for="EmailAddress" type="email" placeholder="Your Email ">
            <label class="text-content" asp-for="State">Your State of Residence</label>
            <select asp-for="State" asp-items="@Survey.States"></select>
            <label class="text-content" asp-for="ActivityLevel">What's your level of activity?</label>
            <select asp-for="ActivityLevel">
                <option value="Inactive">Inactive</option>
                <option value="Sedentary">Sedentary</option>
                <option value="Active">Active</option>
                <option value="Extremely Active">Extremely Active</option>
            </select>
            <input class="heading" type="submit" value="SUBMIT" />
        </fieldset>
    </div>
</form>