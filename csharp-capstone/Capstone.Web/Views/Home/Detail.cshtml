@model Park
@{
    ViewData["Title"] = "Detail";
}

<h2 class="heading">@Model.ParkName</h2>

<table class="table">
    <tbody>
           <tr>
                <td>
                    <img src="~/img/parks/@(Model.ParkCode).jpg" alt="An image of Model.ParkName" />
                </td>
                <td>
                    <p>State: @Model.State</p>
                    <p>Acres: @Model.Acreage </p>
                    <p>Elevation: @Model.ElevationInFeet ft.</p>
                    <p>Miles of Trials: @Model.MilesOfTrail </p>
                    <p>Number of Campsites: @Model.NumberOfCampsites</p>
                    <p>Climate: @Model.Climate</p>
                    <p>Year Founded: @Model.YearFounded</p>
                    <p>Annual Vistors: @Model.AnnualVisitorCount</p>
                    <p>Number of Animal Species: @Model.NumberOfAnimalSpecies</p>
                    <p>Entry Fee: $@Model.EntryFee</p>
                    <p>"@Model.InspirationalQuote" - @Model.InspirationalQuoteSource</p>
                    <p>@Model.ParkDescription</p>


