@model IList<Park>
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="heading"><strong>National Parks</strong></h1>
<br />

<table class="table">
    <tbody>
        @foreach (var park in Model)
        {
        <div class="park-row">
            <tr>
                <td>
                    <a asp-controller="home" asp-action="detail" asp-route-parkcode="@park.ParkCode">
                        <img src="~/img/parks/@(park.ParkCode).jpg" alt="An image of @park.ParkName" />
                    </a>
                </td>
                <td>
                    <h3 class="homepage_container heading">@park.ParkName</h3>
                    <h4 class="homepage_container"><strong>Located in:</strong>  @(park.State)</h4>
                    <p class="homepage_container">@park.ParkDescription</p>
                </td>
            </tr>
        </div>
        }
        </tbody>
</table>
