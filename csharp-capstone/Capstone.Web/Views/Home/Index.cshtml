@model IList<Park>
@{
    ViewData["Title"] = "Home Page";
}

<h2>All Parks</h2>

<table class="table table-bordered">
    <tbody>
        @foreach (var park in Model)
        {
            <tr>
                <td>
                    <a asp-controller="home" asp-action="detail" asp-route-parkcode="@park.ParkCode">
                        <img src="~/img/parks/@(park.ParkCode).jpg" alt="An image of @park.ParkName" />
                    </a>
                </td>
                <td>
                    <p>@park.ParkName</p>
                    <p>@park.State</p>
                    <p>@park.ParkDescription</p>
                </td>
            </tr>
        }
        </tbody>
</table>
